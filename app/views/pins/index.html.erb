
<%= render 'pages/home' if !user_signed_in? %>
<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
  <div class="box panel default-panel">
    <tr>
      <td><%= link_to image_tag(pin.image.url( :medium)), pin %></td>
      <td><%= pin.description %></td>
      <br>
      <td><%= pin.user.email if pin.user %></td>
      <br>
  
      <% if pin.user == current_user %>

      <td><%= link_to edit_pin_path(pin) do %>
        <span class='glyphicon glyphicon-edit'></span>Edit
        <% end %>

      </td>
      <td><%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do%>
        <span class='glyphicon glyphicon-trash'></span>Delete
        <% end %>


      </td>
    </tr>
    <% end %>
  </div>
  <% end %>

</div>

<%= will_paginate @collection, renderer: BootstrapPagination::Rails %>



<br>
<% if user_signed_in? %>
<%= link_to 'New Pin', new_pin_path %>
<% end %>
